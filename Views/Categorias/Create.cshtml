@model GastosPersonales.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Crear categoria</h1>


<hr />
<div class="row">
    <div>
        <div class="col-md-4 shadow m-auto card card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" placeholder="ingrese el nombre de la categoria" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="TipoCategoria" class="control-label"></label>
                   @* <input asp-for="TipoCategoria" class="form-control" />*@
                    <select asp-for="TipoCategoria" class="form-select">
                        <option value="Ingreso" >Ingreso</option>
                        <option value="Egreso">Egreso</option>
                    </select>
                    <span asp-validation-for="TipoCategoria" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Crear nueva categoria" class="btn btn-primary form-control " />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-5">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
