@model GastosPersonales.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Detalles</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <div>
            <div class="col-md-5 shadow-lg m-auto card card-body">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-5">
                    Tipo de categoria
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoCategoria)
                </dd>
            </div>

        </div>

    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-danger" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Volver atras</a>
</div>
