@model GastosPersonales.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center display-6">Editar categoria</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div>
        <div class="col-md-4 shadow m-auto card card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" placeholder="Ingrese el nombre de la categoria" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="TipoCategoria" class="control-label"></label>
                @* <input asp-for="TipoCategoria" class="form-control" />*@
                <select asp-for="TipoCategoria" class="form-select">
                    <option value="Ingreso">Ingreso</option>
                    <option value="Egreso">Egreso</option>
                </select>
                <span asp-validation-for="TipoCategoria" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Actualizar categoria" class="btn btn-primary form-control " />
            </div>
        </form>
    </div>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-5" asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
