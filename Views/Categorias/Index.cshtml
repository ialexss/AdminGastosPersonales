@model IEnumerable<GastosPersonales.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nueva categoria</a>
</p>
<hr />
<table class="table shadow-lg table-hover">
    <thead class="table table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                Tipo de categoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCategoria)
            </td>
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-danger" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
