@model GastosPersonales.Models.Comprobante

@{
    ViewData["Title"] = "Crear comprobante";
}

<h4 class="text-center display-6">Agregar transacción</h4>
<hr />
<br />
<div class="row">
    <div class="">
        <div class="col-md-4 shadow m-auto card card-body card-move">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2">
                    <label asp-for="Detalle" class="control-label"></label>
                   @* <input asp-for="Detalle" class="form-control" />*@
                    <textarea asp-for="Detalle" cols="40" rows="3" class="form-control" placeholder="Ingresa el detalle de tu transacción" >

                    </textarea>
                    <span asp-validation-for="Detalle" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Costo" class="control-label">Monto</label>
                    <input asp-for="Costo" type="number" step="0.01" placeholder="75,50" class="form-control" />
                    <span asp-validation-for="Costo" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 ">
                    <label asp-for="Tipo" class="control-label"></label>
                   @* <input asp-for="Tipo" class="form-control" />*@
                    <select asp-for="Tipo" class="form-select">
                        <option value="Ingreso" >Ingreso</option>
                        <option value="Egreso">Gasto</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group form-check" style="display:none">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Activo" value="true" checked /> @Html.DisplayNameFor(model => model.Activo)
                    </label>
                </div>
                @*<div class="form-group mt-2">
                    <label asp-for="Imagen" class="control-label"></label>
                    <input asp-for="Imagen" class="form-control" />
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>*@
                <div class="form-group mt-2" style="display:none">
                    <label asp-for="UserId" class="control-label">Usuario</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="CategoriaId" class="control-label">Categorias</label>
                    <select asp-for="CategoriaId" class="form-select"  asp-items="ViewBag.CategoriaId"></select>
                </div>
                <div class="form-group mt-5">
                    <input type="submit" value="Agregar transacción" class="btn btn-primary form-control" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
