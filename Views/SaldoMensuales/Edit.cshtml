@model GastosPersonales.Models.SaldoMensual

@{
    ViewData["Title"] = "Editar total mensual";
}

<h1 class="display-6 text-center">Editar cierre de mes</h1>
<hr />
<br />
<div class="row">
    <div>
        <div class="col-md-4 shadow m-auto card card-body card-move">
            <h4>SaldoMensual</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mes" class="control-label"></label>
                    <input asp-for="Mes" class="form-control" />
                    <span asp-validation-for="Mes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Año" class="control-label"></label>
                    <input asp-for="Año" class="form-control" />
                    <span asp-validation-for="Año" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" value="Actualizar" class="btn btn-danger " />
                </div>
            </form>
        </div>
    </div>
   
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
