<table class="table table-hover shadow">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        string nombreMes = new DateTime(1, item.Mes, 1).ToString("MMMM");

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Total) Bs.
            </td>
            <td>
                    @Html.DisplayFor(modelItem => nombreMes )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                <a class="btn btn-dark btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalle</a> 
@*                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
