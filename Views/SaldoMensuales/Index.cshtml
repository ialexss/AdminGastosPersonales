@model IEnumerable<GastosPersonales.Models.SaldoMensual>

@{
    ViewData["Title"] = "Total Mensual";
}

<h1 class="text-center display-6">Saldos Mensuales</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Cerrar mes</a>
</p>
@using (Html.BeginForm("SearchByYear", "SaldoMensuales", FormMethod.Get))
{
    <div class="form-group row">
        <label for="year" class="col-sm-2 col-form-label">Buscar por año:</label>
        <div class="col-sm-4">
            <input type="number" id="year" name="year" class="form-control" min="1900" max="@DateTime.Today.Year" required placeholder="2023">
        </div>
        <div class="col-sm-6">
            <button type="submit" class="btn btn-sn btn-dark">Buscar</button>
        </div>
    </div>
}


