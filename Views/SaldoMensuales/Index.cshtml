@model IEnumerable<GastosPersonales.Models.SaldoMensual>

@{
    ViewData["Title"] = "Index";
}

<h1>Listas Mensuales</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
@using (Html.BeginForm("SearchByYear", "SaldoMensuales", FormMethod.Get))
{
    <div class="form-group row">
        <label for="year" class="col-sm-2 col-form-label">Buscar:</label>
        <div class="col-sm-4">
            <input type="number" id="year" name="year" class="form-control" min="1900" max="@DateTime.Today.Year" required>
        </div>
        <div class="col-sm-6">
            <button type="submit" class="btn btn-sn btn-dark">Buscar</button>
        </div>
    </div>
}


